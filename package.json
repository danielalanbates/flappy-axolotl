{
  "name": "flappy-axolotl",
  "version": "1.0.0",
  "description": "A charming underwater Flappy Bird game featuring a realistic pink axolotl",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "icons:gen": "bash scripts/generate-icons.sh",
    "icons:regen": "bash scripts/create-placeholder.sh && npm run icons:gen"
  },
  "keywords": [
    "game",
    "flappy-bird",
    "axolotl",
    "electron",
    "browser-game"
  ],
  "author": {
    "name": "Daniel Bates",
    "email": "daniel@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jimp": "^0.16.13"
  },
  "build": {
    "appId": "com.flappyaxolotl.game",
    "productName": "Flappy Axolotl",
    "files": [
      "index.html",
      "game.js",
      "style.css",
      "manifest.json",
      "electron-main.js"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "danielalanbates",
      "repo": "flappy-axolotl"
    }
  ]
}
